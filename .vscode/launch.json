{
    "version": "0.2.0",
    "configurations": [

      {
        "name": "Goiam SQLite",
        "cwd": "${workspaceFolder}",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd",
        "env": {
          "GOAM_INFRASTRUCTURE_AS_CODE_MODE": "true"
        },
        "args": [],
        "showLog": true
      },
      {
        "name": "Goiam Postgres",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/main.go",
        "env": {
          "GOIAM_NOT_FOUND_REDIRECT_URL": "http://localhost:8080/",
          "GOIAM_USE_X_FORWARDED_FOR": "true",
          "GOIAM_ENABLE_REQUEST_TIMING": "true"
        },
        "args": ["--db", "postgres://goiam:secret123@localhost:5432/goiamdb"],
        "showLog": true
      }
    ]
  }